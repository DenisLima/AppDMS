<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="F-154887"
        android:id="@+id/txtDetalhesLote"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#999999"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="32"
        android:id="@+id/txtDetalhesId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/modelo"
        android:id="@+id/txtDetalhesModelo"
        android:layout_toEndOf="@+id/txtDetalheEstoque"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtDetalheData"
        android:layout_alignStart="@+id/txtDetalheData"
        android:textColor="#999999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Solda Porca"
        android:id="@+id/txtDetalheLocal"
        android:layout_below="@+id/txtDetalhesLote"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#999999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2010000012"
        android:id="@+id/txtDetalheMaterial"
        android:layout_below="@+id/txtDetalheLocal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#999999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="60811TS6"
        android:id="@+id/txtDetalheFabricante"
        android:layout_below="@+id/txtDetalheMaterial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="E01024"
        android:id="@+id/txtDetalheEstoque"
        android:layout_alignBottom="@+id/txtDetalheFabricante"
        android:layout_centerHorizontal="true"
        android:textColor="#999999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="240"
        android:id="@+id/txtDetalheQtd"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/txtDetalhesModelo"
        android:layout_alignBottom="@+id/txtDetalheEstoque"
        android:layout_alignLeft="@+id/txtDetalheData"
        android:layout_alignStart="@+id/txtDetalheData"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="31/05/2015"
        android:id="@+id/txtDetalheData"
        android:layout_alignTop="@+id/txtDetalheMaterial"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#999999" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Corredor 05"
        android:id="@+id/txtDetalhesCorredor"
        android:layout_alignTop="@+id/txtDetalheLocal"
        android:layout_alignRight="@+id/txtDetalheData"
        android:layout_alignEnd="@+id/txtDetalheData" />
</RelativeLayout>